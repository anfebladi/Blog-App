<!DOCTYPE html>

    
<html>
    <%- include("../partials/head.ejs") %>
    <%- include("../partials/nav.ejs") %>
    <body>
        <div class="container-fluid">
            <div class="row  mt-3">
                <div class="col-10 ms-5">
                    <h1 class="ms-5">
                        Your Blogs:
                    </h1>
                </div>
            </div>
            
            <div class="row  my-5">
                <div class="col-10 ms-5">
                    <% if(blogs.length > 0) { %>
                        <% blogs.forEach(blog => {%>
                            <div class="border-end border-5 border-secondary ms-5">
                                <a class="text-decoration-none text-black" href="/blogs/ <%= blog._id %>" >
                                    <h3> <%=blog.title %></h3>
                                    <p> <%= blog.description , blog.body %></p>
                                </a>
                            </div>
                            <hr>

                        <% }) %>

                    <% } else { %> 
                        <p> there are no blogs to display</p>
                    <% } %>
                </div>

            </div>
        </div>







    </body>

    
    
</html>
<%- include("../partials/footer.ejs") %>